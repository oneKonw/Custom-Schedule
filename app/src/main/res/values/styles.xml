<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/red2</item>
    </style>
    <!--toolbar字体-->
    <style name="ToolbarColorTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="actionMenuTextColor">@color/hui</item>
        <item name="android:textColorPrimary">@color/hui</item>
    </style>

    <style name="Splash" parent="android:Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="widget_week_1">
        <item name="android:id">@android:id/text1</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">73dp</item>
        <item name="android:background">@color/red2</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="widget_week_textview">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/widget_table_textColor</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="AboutTheme" parent="AppTheme">
    </style>

</resources>
