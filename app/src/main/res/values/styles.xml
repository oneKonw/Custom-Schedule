<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/red2</item>
    </style>
    <!--toolbar字体-->
    <style name="ToolbarColorTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="actionMenuTextColor">@color/hui</item>
        <item name="android:textColorPrimary">@color/hui</item>
    </style>

    <style name="Splash" parent="android:Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

</resources>
