<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="250dp"
    android:layout_height="335dp">


    <TextView
        android:elevation="3dp"
        android:id="@+id/dialog_tv_ClsName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="课程名称"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@color/dialog_message_clsName"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dialog_tv_clsSite"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="教室"
            android:textSize="15sp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/dialog_tv_clsNumber"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="节数"
            android:textSize="15sp"
            android:gravity="center"
            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/dialog_table_weeks"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        >
    </RelativeLayout>

    <TextView
        android:id="@+id/dialog_tv_setting"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="编辑"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@color/dialog_message_setting"
        />

</LinearLayout>