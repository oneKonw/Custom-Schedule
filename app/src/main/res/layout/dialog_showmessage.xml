<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="470dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="课程详情"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:id="@+id/ll_clsName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_tv_ClsName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:text="课程名称"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:paddingLeft="35dp"/>

        <Button
            android:id="@+id/dialog_btn_setting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="编辑"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_marginRight="35dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_ll_clsSite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="7dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="教室"
            android:textSize="17sp"
            android:paddingLeft="36sp"
            android:paddingRight="24dp"/>
        <TextView
            android:id="@+id/dialog_tv_clsSite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所在教室"
            android:textSize="17sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/dialog_ll_clsNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="7dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="节数"
            android:textSize="17sp"
            android:paddingLeft="36sp"
            android:paddingRight="24dp"/>

        <TextView
            android:id="@+id/dialog_tv_Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所在节"
            android:textSize="17sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/dialog_ll_clsWeek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="7dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="周数"
            android:textSize="20sp"
            android:layout_gravity="center"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/dialog_rl_weeks"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center">
    </RelativeLayout>

</LinearLayout>