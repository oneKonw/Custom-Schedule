<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tab_tv_nowweek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="第一周"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="4dp"
            android:background="@color/white"
            android:elevation="1dp"/>
        <TextView
            android:id="@+id/tv_weekSchedule_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="双击任意地方可添加课程，正方系统导入在左上角菜单里，点击可关闭此条提示"
            android:textSize="10sp"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="周一"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="周二"
                    android:id="@+id/textView7" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="周三"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="周四"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="周五"
                    android:id="@+id/textView4" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="周六"
                    android:id="@+id/textView6" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="周日"/>
            </LinearLayout>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="1" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="2" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="3" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="4" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="5" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="6" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="7"
                            android:id="@+id/textView" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="8" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="9" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="10" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="11" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="12" />


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/tab_week_ll_week"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RelativeLayout
                            android:id="@+id/day1"
                            android:layout_width="0dp"
                            android:layout_weight="1.00"
                            android:layout_height="600dp"
                            android:orientation="vertical"
                            android:focusableInTouchMode="true">
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/day2"
                            android:layout_width="0dp"
                            android:layout_weight="1.00"
                            android:layout_height="600dp"
                            android:orientation="vertical"
                            android:focusableInTouchMode="true">
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/day3"
                            android:layout_width="0dp"
                            android:layout_weight="1.00"
                            android:layout_height="600dp"
                            android:orientation="vertical"
                            android:focusableInTouchMode="true">
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/day4"
                            android:layout_width="0dp"
                            android:layout_weight="1.00"
                            android:layout_height="600dp"
                            android:orientation="vertical"
                            android:focusableInTouchMode="true">
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/day5"
                            android:layout_width="0dp"
                            android:layout_weight="1.00"
                            android:layout_height="600dp"
                            android:orientation="vertical"
                            android:focusableInTouchMode="true">
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/day6"
                            android:layout_width="0dp"
                            android:layout_weight="1.00"
                            android:layout_height="600dp"
                            android:orientation="vertical"
                            android:focusableInTouchMode="true">
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/day7"
                            android:layout_width="0dp"
                            android:layout_weight="1.00"
                            android:layout_height="600dp"
                            android:orientation="vertical"
                            android:focusableInTouchMode="true">
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
                <!--<Button-->
                    <!--android:id="@+id/btn_delete"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="重置所有"/>-->

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>